<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cis400.orangeshare.PostDetailFragment"
        android:paddingStart="40dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Name"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:id="@+id/profile_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:id="@+id/profile_email"
            android:textSize="24sp"
            android:text="Email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_birthday_title"
            android:layout_below="@id/profile_email"
            android:paddingTop="35dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:text="Born:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_birthday"
            android:text="Feb 23, 1999"
            android:textSize="18sp"
            android:paddingStart="30dp"
            android:layout_below="@id/profile_birthday_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_number_title"
            android:layout_below="@id/profile_birthday"
            android:paddingTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:text="Contact:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_number"
            android:text="(555) 555-6666"
            android:textSize="18sp"
            android:paddingStart="30dp"
            android:layout_below="@id/profile_number_title"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>